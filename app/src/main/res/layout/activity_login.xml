<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login">

    <Button
        android:id="@+id/facebook_sign_in_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginBottom="230dp"
        android:background="@drawable/facebook_button_state"
        android:drawableLeft="@drawable/com_facebook_button_login_logo"
        android:paddingLeft="13dp"
        android:text="Facebook으로 로그인"
        android:textSize="15sp"
        android:stateListAnimator="@null"
        android:textColor="@color/colorWhite" />

    <com.shobhitpuri.custombuttons.GoogleSignInButton
        android:id="@+id/google_sign_in_button"
        android:text="Google로 로그인"
        android:textSize="15dp"
        android:stateListAnimator="@null"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="170dp" />

    <Button
        android:id="@+id/guest_sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="120dp"
        android:background="#00FFFFFF"
        android:stateListAnimator="@null"
        android:text="Guest 로그인"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />
    <include
        layout="@layout/view_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</RelativeLayout>